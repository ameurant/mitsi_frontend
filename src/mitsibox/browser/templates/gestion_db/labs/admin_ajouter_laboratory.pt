<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="fr"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="fr"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="box">

<body>

<metal:block fill-slot="top_slot"
           tal:define="dummy python:request.set('disable_border',1)" />

<metal:main fill-slot="content-core"
            tal:define="labsView context/@@manageLabs;
                        allLabs labsView/getListingLabs">

    <section class="formulaire section-donnee">
        <h2>
            <i class="fas fa-ellipsis-v"></i>
            Ajouter un laboratoire
        </h2>
        <form action="insertLabs"
              method="post">
              
            <div class="formInput">
                <label for="labs-nom">
                    Nom du laboratoire :
                </label>
                <input type="text"
                       name="labsName"
                       id="labs-name"
                       value="" />
            </div>
            <div class="formInput">
                <label for="labs-adress">
                    Adresse :
                </label>
                <input type="text"
                       name="labsAddress"
                       id="labs-adress"
                       value="" />
            </div>
            <div class="formInput">
                <label for="labs-cp">
                    CP :
                </label>
                <input type="text"
                       name="labsCp"
                       id="labs-cp"
                       value="" />
            </div>
            <div class="formInput">
                <label for="labs-localite">
                    Localit√© :
                </label>
                <input type="text"
                       name="labsLocalite"
                       id="labs-localite"
                       value="" />
            </div>
            <div class="formInput">
                <label for="labs-lat">
                    Latitude :
                </label>
                <input type="text"
                       name="labsLat"
                       id="labs-lat"
                       value="" />
            </div>
            <div class="formInput">
                <label for="labs-long">
                    Longitude :
                </label>
                <input type="text"
                       name="labsLong"
                       id="labs-long"
                       value="" />
            </div>
            <div class="formInput">
                <label for="labs-schema">
                    Schema DB :
                </label>
                <input type="text"
                       name="labsSchema"
                       id="labs-schema"
                       value=""
                       require />
            </div>

            <div class="formControls" align="center">
                <input type="submit"
                       name="submit"
                       value="Enregister" />
            </div>
        </form>
    </section>
</metal:main>
</body>
</html>
