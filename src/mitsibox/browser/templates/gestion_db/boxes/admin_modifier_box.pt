<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="fr"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="fr"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="box">

<body>

<metal:block fill-slot="top_slot"
           tal:define="dummy python:request.set('disable_border',1)" />

<metal:main fill-slot="content-core"
            tal:define="idBox request/idBox;
                        boxesView context/@@manageBox;
                        labsView context/@@manageLabs;
                        allLabs labsView/getListingLabs;
                        myBox python: boxesView.getOneBoxById(idBox)">
    

    <section class="formulaire section-donnee">
        <h2>
            <i class="fas fa-ellipsis-v"></i>
            Modifier cette boite
        </h2>
        <form action="updateBox"
              method="post">
              <div class="form-input">
                  <label for="labo-id">
                      Laboratoire  :
                  </label>
                  <select name="laboId"
                          id="laboId">
                        <option>...</option>
                        <tal:boucle tal:repeat="lab allLabs">
                            <option value=""
                                    selected=""
                                    tal:attributes="value lab/_id;
                                                    selected python:myBox.lab_id==lab._id and 'selected' or None;">
                                <span tal:content="lab/name" /> ::
                                <span tal:condition="exists: lab/schemadb"
                                      tal:content="lab/schemadb" />
                            </option>
                        </tal:boucle>
                  </select>
              </div>
            
            <div class="form-input">
                <label for="box-nom">
                    Nom la boite :
                </label>
                <input type="text"
                       name="boxName"
                       id="box-name"
                       tal:attributes="value myBox/name"  />
            </div>
            <div class="form-input">
                <label for="box-adresse">
                    Adresse :
                </label>
                <input type="text"
                       name="boxAddress"
                       id="box-adresse"
                       tal:attributes="value myBox/address" />
            </div>
            <div class="form-input">
                <label for="box-cp">
                    CP :
                </label>
                <input type="text"
                       name="boxCp"
                       id="box-cp"
                       tal:attributes="value myBox/cp" />
            </div>
            <div class="form-input">
                <label for="box-localite">
                    Localit√© :
                </label>
                <input type="text"
                       name="boxLocalite"
                       id="box-localite"
                       tal:attributes="value myBox/localite" />
            </div>
            <div class="form-input">
                <label for="box-lat">
                    Latitude :
                </label>
                <input type="text"
                       name="boxLat"
                       id="box-lat"
                       tal:attributes="value myBox/lat" />
            </div>
            <div class="form-input">
                <label for="box-long">
                    Longitude :
                </label>
                <input type="text"
                       name="boxLong"
                       id="box-long"
                       tal:attributes="value myBox/long" />
            </div>
            <div class="form-input">
                <label for="box-ssid-wifi">
                    SSID Wifi :
                </label>
                <input type="text"
                       name="boxSsidWifi"
                       id="box-ssid-wifi"
                       tal:attributes="value myBox/ssid" />
            </div>
            <div class="form-input">
                <label for="box-pass-wifi">
                    PASS Wifi :
                </label>
                <input type="text"
                       name="boxPassWifi"
                       id="box-pass-wifi"
                       tal:attributes="value myBox/passwifi" />
            </div>
            <div class="form-input">
                <label for="box-arduino">
                    Arduino :
                </label>
                
                <input type="text"
                       name="boxArduino"
                       id="box-arduino"
                       tal:attributes="value myBox/arduino " />
                
            </div>
            <div class="formControls" align="center">
                <input type="hidden"
                       name="idBox"
                       tal:attributes="value idBox" />
                <input type="submit"
                       name="submit"
                       value="Modifier" />
            </div>
        </form>
    </section>
</metal:main>
</body>
</html>
