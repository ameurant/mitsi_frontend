<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="fr"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="fr"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="box">

<body>

<metal:main fill-slot="content-core"
            tal:define="boxesView context/@@manageBox;
                        allBoxes boxesView/getListingBox">
<!--
<nav class="icone-toggle-listing-box">
    <a href=""
        tal:attributes="href string:${context/portal_url}/show-all-boxes">
        <i class="fas fa-th"></i>
    </a>
</nav>
-->
<nav>
    <a href=""
       tal:attributes="href string:${context/portal_url}/ajouter-une-mitsibox"
       class="btn btn-primary"
       role="button">
        Ajouter une boite
    </a>
</nav>

<div class="flex-box">  
    <table border="1" class="listing">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Adresse</th>
                <th>Lattitude</th>
                <th>Longitude</th>
                <th>SSID Wifi</th>
                <th>Tournée</th>
            </tr>
        </thead>
        <tal:boucle tal:repeat="boxe allBoxes">
            <tr>
                <td>
                    <span tal:content="boxe/name" />
                </td>
                <td>
                    <span tal:content="boxe/address" />
                </td>
                <td>
                    <span tal:content="boxe/lat" />
                </td>
                <td>
                    <span tal:content="boxe/long" />
                </td>
                <td>
                    <span tal:content="boxe/ssid" />
                </td>
                <td>
                    (tournée)
                </td>
            </tr>
        </tal:boucle>
    </table>
</div>

</metal:main>
</body>
</html>