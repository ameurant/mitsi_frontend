<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="fr"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="fr"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="box">

<body>

<metal:main fill-slot="content-core"
            tal:define="roundsView context/@@manageRounds;
                        allRounds roundsView/getAllRounds;
                        boiteView context/@@manageBox">
<nav>
    <a href=""
       tal:attributes="href string:${context/portal_url}/ajouter-une-tournee"
       class="btn btn-primary"
       role="button">
        Ajouter une tournée
    </a>
</nav>

<tal:boucle tal:repeat="round allRounds">
    ==> <span tal:content="round" /> <==
    <hr /
    <div class="card border-info mb-3"> 
        <div class="card-header">
            <h3 class="text-info"><span tal:content="round/roundName" /></h3>
            <a href=""
               tal:attributes="href string:modifier-une-tournee?idRound=${round/_id}">
           Modifier la tournée</a>
        </div>
        <div class="card-body text-secondary">
            <tal:block tal:define="allBoxes round/roundMitsiboxList">
                <tal:boucle tal:repeat="idBoxe allBoxes">
                    <tal:boxe tal:define="boite python:boiteView.getOneBoxById(idBoxe)">
                        <div> 
                            <span tal:content="boite/name"></span>
                            <span tal:content="boite/address"></span>
                            <span tal:content="boite/cp"></span>
                            <span tal:content="boite/localite"></span>
                            <span tal:content="boite/lat"></span>
                            <span tal:content="boite/long"></span>
                            <span tal:content="boite/last_deposit"></span>
                            
                        </div>
                    </tal:boxe>
                </tal:boucle>
            </tal:block>
        </div>
    </div>
</tal:boucle>

</metal:main>
</body>
</html>

