<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="fr"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="fr"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="box">

<body>

<metal:block fill-slot="top_slot"
           tal:define="dummy python:request.set('disable_border',1)" />

<metal:main fill-slot="content-core"
            tal:define="boiteView context/@@displayBox; 
                        boites python:boiteView.getListingBox()">

    <section class="formulaire section-donnee">
        <h2>
            <i class="fas fa-ellipsis-v"></i>
            Ajouter une tournée
        </h2>

        <form action="insertRound"
              method="post">
              
            <div class="form-input">
                <label for="round-name">
                    Nom de la tournée :
                </label>
                <input type="text"
                       name="roundName"
                       id="round-name"
                       value="" />
            </div>
            <div class="form-input">
                <label for="round-type">
                    Type de la tournée :
                </label>
                <select name="roundType"
                        id="round-type"
                        required>
                    <option value="daily">Quotidienne</option>
                    <option value="urgent">Urgente</option>
                </select>
            </div>
            <div class="form-input">
                <label for="round-start-time">
                    Heure de départ :
                </label>
                <input type="time"
                       name="roundStartTime"
                       id="round-start-time"
                       value=""
                       required />
            </div>
            <div class="form-input">
                <label for="round-estimed-time">
                    Durée estimée :
                </label>
                <input type="time"
                       name="roundEstimedTime"
                       id="round-estimed-time"
                       value=""
                       required />
            </div>
            <div class="form-input">
                <label for="round-mitisibox-list">
                    Sélectionner les mitisibox composant cette tournée :
                </label>
                <select multiple="multiple"
                        name="roundMitsiboxList:list"
                        id="round-mitsibox-list"
                        required>
                    <tal:boucle tal:repeat="boite boites">
                        <option tal:attributes="value boite/_id">
                            <strong><span tal:content="boite/name" />
                            <span tal:content="boite/address" />
                            <span tal:content="boite/cp" /> <span tal:content="boite/localite" />
                        </option>
                    </tal:boucle>
                </select>
            </div>
            
            <div class="formControls" align="center">
                <input type="submit"
                       name="submit"
                       value="Enregister" />
            </div>
        </form>
        <script>
            let select = document.getElementById("round-mitsibox-list");
            multi(select, {enable_search: false});
        </script>
    </section>
</metal:main>
</body>
</html>
