<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="fr"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="fr"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="box">

<body>

<metal:block fill-slot="top_slot"
           tal:define="dummy python:request.set('disable_border',1)" />

<metal:main fill-slot="content-core"
            tal:define="labsView context/@@manageLabs;
                        allLabs labsView/getListingLabs">

    <section class="formulaire">
        <h2>
            <i class="fas fa-ellipsis-v"></i>
            Ajouter un chauffeur
        </h2>
        <form action="insertDriver"
              method="post">
              
            <div class="form-input">
                <label for="driver-last-name">
                    Nom du chauffeur :
                </label>
                <input type="text"
                       name="driverLastName"
                       id="driver-last-name"
                       value="" />
            </div>
            <div class="form-input">
                <label for="driver-first-name">
                    Pr√©nom du chauffeur :
                </label>
                <input type="text"
                       name="driverFirstName"
                       id="labs-first-name"
                       value="" />
            </div>
            <div class="form-input">
                <label for="driver-gsm">
                    GSM :
                </label>
                <input type="text"
                       name="driverGsm"
                       id="driver-gsm"
                       value="" />
            </div>
            <div class="form-input">
                <label for="driver-id">
                    Identifiant :
                </label>
                <input type="text"
                       name="driverId"
                       id="driverId"
                       value=""
                       required />
            </div>
            <div class="form-input">
                <label for="driver-pass">
                    Password :
                </label>
                <input type="text"
                       name="driverPass"
                       id="driver-pass"
                       value=""
                       required />
            </div>
            <div class="formControls" align="center">
                <input type="submit"
                       name="submit"
                       value="Enregister" />
            </div>
        </form>
    </section>
</metal:main>
</body>
</html>
